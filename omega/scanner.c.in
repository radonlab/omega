#include "omega/scanner.h"

#include "omega/token.h"

void omg_scanner_init(omg_scanner* scanner, const char* str) {
  scanner->cursor = str;
  scanner->cur_pos = 0;
  scanner->cur_line = 1;
  scanner->cur_col = 1;
}

static omg_token make_token(omg_scanner* scanner, int token_type) {
  omg_token token = {
      .type = token_type,
      .pos = scanner->cur_pos,
      .lineno = scanner->cur_line,
      .colno = scanner->cur_col,
  };
  return token;
}

